{
  "name": "@counterfactual/playground-server",
  "version": "0.0.1",
  "description": "A backend for the Playground app.",
  "author": "Counterfactual",
  "homepage": "https://github.com/counterfactual/monorepo",
  "license": "MIT",
  "main": "src/index.ts",
  "directories": {
    "lib": "src",
    "test": "tests"
  },
  "files": [
    "src"
  ],
  "publishConfig": {
    "registry": "https://registry.yarnpkg.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/counterfactual/monorepo.git"
  },
  "scripts": {
    "build": "echo 'No build necessary'",
    "build-ts": "tsc -p tsconfig.heroku.json",
    "disabled-postinstall": "npm run build-ts",
    "lint": "tslint -c tslint.json -p .",
    "serve": "node dist/",
    "start": "env-cmd development --fallback ts-node src/",
    "test": "env-cmd test --fallback jest --forceExit",
    "test:ci": "env-cmd test --fallback jest --forceExit"
  },
  "bugs": {
    "url": "https://github.com/counterfactual/monorepo/issues"
  },
  "dependencies": {
    "@counterfactual/node": "^0.0.1",
    "@counterfactual/types": "^0.0.1",
    "@ebryn/jsonapi-ts": "^0.0.3",
    "@koa/cors": "^2.2.3",
    "escape-string-regexp": "^1.0.5",
    "jsonwebtoken": "^8.4.0",
    "knex": "^0.16.3",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "koa-compose": "^4.1.0",
    "logepi": "^1.0.5",
    "pg": "^7.7.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.3.0",
    "@types/knex": "^0.15.1",
    "@types/koa": "^2.0.48",
    "@types/koa__cors": "^2.2.3",
    "@types/uuid": "^3.4.4",
    "axios": "^0.18.0",
    "env-cmd": "^8.0.2",
    "firebase-server": "^1.0.1",
    "jest": "^24.1.0",
    "sqlite3": "^4.0.4",
    "ts-jest": "24.0.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.2"
  }
}
