{
  "name": "@counterfactual/playground-server",
  "version": "0.0.1",
  "description": "A backend for the Playground app.",
  "author": "Counterfactual",
  "homepage": "https://github.com/counterfactual/monorepo",
  "license": "MIT",
  "main": "src/index.ts",
  "directories": {
    "lib": "src",
    "test": "tests"
  },
  "files": [
    "src"
  ],
  "publishConfig": {
    "registry": "https://registry.yarnpkg.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/counterfactual/monorepo.git"
  },
  "scripts": {
    "build": "echo 'No build necessary'",
    "lint": "tslint -c tslint.json -p .",
    "start": "env-cmd development ts-node src/",
    "test": "env-cmd test jest --forceExit"
  },
  "bugs": {
    "url": "https://github.com/counterfactual/monorepo/issues"
  },
  "dependencies": {
    "@counterfactual/node": "^0.0.1",
    "@koa/cors": "^2.2.3",
    "jsonwebtoken": "^8.4.0",
    "knex": "^0.16.3",
    "koa": "^2.6.2",
    "koa-body": "^4.0.6",
    "koa-router": "^7.4.0",
    "logepi": "^1.0.5",
    "pg": "^7.7.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.3.0",
    "@types/knex": "^0.15.1",
    "@types/koa": "^2.0.48",
    "@types/koa-router": "^7.0.36",
    "@types/koa__cors": "^2.2.3",
    "@types/uuid": "^3.4.4",
    "axios": "^0.18.0",
    "env-cmd": "^8.0.2",
    "sqlite3": "^4.0.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.2"
  },
  "jest": {
    "bail": true,
    "cacheDirectory": "jest-cache",
    "coverageDirectory": "jest-coverage",
    "coveragePathIgnorePatterns": [
      "test"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "rootDir": ".",
    "roots": [
      "test"
    ],
    "testPathIgnorePatterns": [
      "node_modules",
      "dist"
    ],
    "testEnvironment": "node",
    "testRegex": "\\.spec.(jsx?|tsx?)$",
    "testURL": "http://localhost/",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "verbose": false
  }
}
