{
	"name": "@counterfactual/contracts",
	"private": true,
	"version": "0.0.1",
	"description": "Collection of smart contracts for use by the Counterfactual framework.",
	"scripts": {
		"build": "tsc --project tsconfig.json",
		"clean": "shx rm -rf lib build",
		"lint:all:fix": "yarn lint:fix && yarn lint:sol:fix",
		"lint:all": "yarn lint && yarn lint:sol",
		"lint:fix": "tslint -c tslint.json migrations/**/*.ts src/**/*.ts --fix",
		"lint:sol:fix": "solium -d . --fix",
		"lint:sol": "solium -d .",
		"lint": "tslint -c tslint.json migrations/**/*.ts src/**/*.ts",
		"precommit": "lint-staged",
		"prettier:fix": "prettier --write 'src/**/*'",
		"prettier": "prettier -l 'src/**/*'",
		"test": "yarn build && yarn truffle:test",
		"test:circleci": "yarn test:coverage",
		"test:coverage": "solidity-coverage",
		"truffle:compile": "truffle compile",
		"truffle:console": "truffle console",
		"truffle:migrate": "truffle migrate",
		"truffle:test": "run-with-testrpc 'truffle test $npm_package_config_testFiles'"
	},
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"files": [
		"lib/"
	],
	"config": {
		"testFiles": "lib/**/*.spec.js"
	},
	"lint-staged": {
		"*.js": [
			"prettier --write",
			"git add"
		]
	},
	"keywords": [
		"ethereum",
		"counterfactual",
		"state channels",
		"solidity"
	],
	"author": "Counterfactual (https://counterfactual.com)",
	"license": "MIT",
	"devDependencies": {
		"@counterfactual/typescript-typings": "1.0.0",
		"@types/bignumber.js": "^4.0.2",
		"@types/chai": "^4.1.3",
		"@types/mocha": "^5.2.0",
		"@types/node": "^10.1.3",
		"babel-eslint": "8.2.5",
		"chai": "^4.1.2",
		"coveralls": "3.0.1",
		"decimal.js": "10.0.1",
		"ethers": "ethers-io/ethers.js#typescript",
		"ganache-cli": "6.1.3",
		"husky": "0.14.3",
		"lint-staged": "7.2.0",
		"prettier": "1.13.6",
		"run-with-testrpc": "^0.3.0",
		"solc": "^0.4.24",
		"solidity-coverage": "0.5.4",
		"solium": "1.1.7",
		"truffle": "4.1.12",
		"truffle-migrate-off-chain": "^0.1.4",
		"ts-node": "^7.0.0",
		"tsc": "^1.20150623.0",
		"tslint": "^5.10.0",
		"typescript": "^2.9.2"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/counterfactual/contracts.git"
	},
	"bugs": {
		"url": "https://github.com/counterfactual/contracts/issues"
	},
	"homepage": "https://github.com/counterfactual/contracts#readme"
}
