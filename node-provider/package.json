{
  "name": "@counterfactual/node-provider",
  "version": "0.0.1",
  "main": "dist/index.js",
  "iife": "dist/index-iife.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf .rpt2_cache jest-cache build dist",
    "build": "tsc -p tsconfig.json && rollup -c",
    "test": "tsc -b && jest --runInBand --detectOpenHandles --bail",
    "test-debug": "node --inspect-brk jest --runInBand",
    "lint:fix": "tslint -c tslint.json -p . --fix",
    "lint": "tslint -c tslint.json -p ."
  },
  "devDependencies": {
    "@types/jest": "^23.3.3",
    "@types/node": "^10.9.3",
    "jest": "^23.6.0",
    "lodash": "^4.17.10",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "typescript": "^3.1.2"
  },
  "jest": {
    "verbose": false,
    "bail": true,
    "rootDir": ".",
    "cacheDirectory": "jest-cache",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "\\.spec.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "node_modules",
      "dist"
    ],
    "roots": [
      "test"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "testURL": "http://localhost/"
  }
}
