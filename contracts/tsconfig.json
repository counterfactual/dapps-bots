{
  "extends": "./node_modules/@counterfactual/configs/tsconfigs/base-tsconfig",
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "lib/",
    "baseUrl": ".",
    "paths": {
      "@counterfactual/*": ["../../node_modules/@counterfactual/*"]
    }
  },
  "include": [
    "./node_modules/@counterfactual/typescript-typings/types/**/*.d.ts",
    "./node_modules/ethers/dist/ethers.d.ts",
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
