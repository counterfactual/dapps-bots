{
  "name": "@counterfactual/test-utils",
  "version": "0.0.1",
  "description": "Miscellaneous utility functions.",
  "main": "lib/utils.js",
  "scripts": {
    "build": "tsc --project tsconfig.json.modified",
    "clean": "shx rm -rf lib",
    "lint:all:fix": "yarn lint:fix && yarn lint:sol:fix",
    "lint:all": "yarn lint && yarn lint:sol",
    "lint:fix": "tsc --noEmit --project tsconfig.json.modified && tslint -c tslint.json src/**/*.ts --fix",
    "lint:sol:fix": "solium -d contracts/ --fix",
    "lint:sol": "solium -d .",
    "lint": "tsc --noEmit --project tsconfig.json.modified && tslint -c tslint.json src/**/*.ts",
    "precommit": "lint-staged"
  },
  "files": [
    "src"
  ],
  "lint-staged": {
    "**/*.ts": [
      "yarn lint:fix",
      "git add"
    ]
  },
  "author": "Liam Horne <liam@l4v.io>",
  "license": "MIT",
  "devDependencies": {
    "@counterfactual/configs": "0.0.1",
    "@counterfactual/typescript-typings": "1.0.0",
    "@types/bignumber.js": "4.0.2",
    "@types/chai": "4.1.3",
    "@types/chai-as-promised": "^7.1.0",
    "@types/chai-string": "^1.4.1",
    "@types/mocha": "5.2.0",
    "@types/node": "10.1.3",
    "coveralls": "3.0.1",
    "husky": "0.14.3",
    "lint-staged": "7.2.0",
    "ts-node": "7.0.0",
    "tsc": "1.20150623.0",
    "tslint": "5.10.0",
    "typescript": "2.9.2"
  },
  "dependencies": {
    "chai": "4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^2.0.2",
    "chai-string": "^1.4.0",
    "ethers": "ethers-io/ethers.js#typescript"
  }
}
