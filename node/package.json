{
  "name": "@counterfactual/node",
  "version": "0.0.1",
  "main": "dist/index.js",
  "iife": "dist/index.iife.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "test": "jest --setupFiles dotenv-extended/config --runInBand --detectOpenHandles --bail",
    "test:coverage": "jest --runInBand --detectOpenHandles --bail --coverage",
    "lint:fix": "tslint -c tslint.json -p . --fix",
    "lint": "tslint -c tslint.json -p ."
  },
  "devDependencies": {
    "@counterfactual/apps": "0.0.1",
    "@firebase/app-types": "^0.3.3",
    "@types/node": "^10.12.19",
    "dotenv-extended": "^2.3.0",
    "firebase-server": "^1.0.1",
    "ganache-core": "2.4.0",
    "jest": "^23.6.0",
    "rollup": "^1.0.1",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-typescript2": "^0.19.0",
    "ts-mockito": "^2.3.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.2"
  },
  "dependencies": {
    "@counterfactual/cf.js": "0.0.5",
    "@counterfactual/machine": "0.0.1",
    "@counterfactual/types": "0.0.1",
    "ethers": "4.0.23",
    "eventemitter3": "^3.1.0",
    "firebase": "5.7.1",
    "uuid": "^3.3.2"
  },
  "jest": {
    "bail": true,
    "coverageDirectory": "jest-coverage",
    "coveragePathIgnorePatterns": [
      "test"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "rootDir": ".",
    "roots": [
      "test"
    ],
    "testPathIgnorePatterns": [
      "node_modules",
      "dist"
    ],
    "testRegex": "\\.spec.(jsx?|tsx?)$",
    "testURL": "http://localhost/",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "verbose": false
  }
}
