{
  "name": "@counterfactual/machine",
  "version": "0.0.1",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf jest-cache build dist && cd contracts && yarn clean",
    "build": "tsc",
    "prepare": "rollup -c",
    "docker:run": "docker-compose up -d machine && yarn test:buildContracts",
    "docker:build": "docker-compose build",
    "shell": "docker-compose run machine sh",
    "test": "docker-compose exec machine sh /machine/bin/test",
    "test:buildContracts": "docker-compose exec machine /bin/sh -c \"cd contracts && yarn && yarn build\"",
    "test:deployContracts": "docker-compose exec machine sh /machine/bin/deploy_contracts",
    "test:jest": "./node_modules/.bin/jest --runInBand --detectOpenHandles --bail",
    "test-debug:jest": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:ci": "yarn test:deployContracts && yarn test",
    "ganache": "ganache-cli --gasLimit 0xfffffffffff --port 9545",
    "ganache:stop": "ps aux | grep ganache-cli | grep -v grep | awk '{print $2}' | xargs kill -9",
    "rollup": "tsc && ./scripts/rollup.sh",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix": "tslint -c tslint.json -p tsconfig.json --fix",
    "prettier": "prettier -l '{src,test,cf.js}/{**/*,*}'",
    "prettier:fix": "prettier --write '{src,test,cf.js}/{**/*,*}'"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/jest": "^23.3.3",
    "@types/lodash": "^4.14.116",
    "@types/node": "^10.9.3",
    "chai": "^4.2.0",
    "coveralls": "3.0.1",
    "ganache-cli": "^6.1.8",
    "jest": "^23.6.0",
    "lerna": "^2.11.0",
    "lodash": "^4.17.10",
    "prettier": "1.14.2",
    "rollup": "^0.66.4",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-typescript2": "^0.17.1",
    "ts-jest": "^23.1.4",
    "ts-node": "^7.0.0",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.14.0",
    "tslint-plugin-prettier": "1.3.0",
    "typescript": "^3.1.2"
  },
  "peerDependencies": {
    "ethers": "^4.0.4",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-typescript2": "^0.17.1"
  },
  "dependencies": {
    "@counterfactual/configs": "0.0.1",
    "@counterfactual/test-utils": "0.0.1",
    "@counterfactual/typescript-typings": "0.0.1",
    "ethers": "^4.0.4",
    "sha3": "^1.2.2"
  },
  "prettier": {
    "useTabs": false
  },
  "jest": {
    "verbose": false,
    "bail": true,
    "rootDir": ".",
    "cacheDirectory": "jest-cache",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "\\.spec.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "src",
      "node_modules",
      "dist"
    ],
    "roots": [
      "test"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "testURL": "http://localhost/",
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    }
  }
}
